{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5094
        }
      ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "" // Отключаем аутентификацию для этого маршрута
      }
    },
    {
      "DownstreamPathTemplate": "/api/cache/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5197
        }
      ],
      "UpstreamPathTemplate": "/cache/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ]
    },
    {
      "DownstreamPathTemplate": "/api/finance/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5145
        }
      ],
      "UpstreamPathTemplate": "/finance/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "" // Отключаем аутентификацию для этого маршрута
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5030",
    "AuthorizationService": {
      "Enabled": false // Отключаем авторизацию на уровне Ocelot
    }
  }
